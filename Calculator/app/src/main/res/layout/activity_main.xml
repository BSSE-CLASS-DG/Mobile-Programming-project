<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    android:background="@color/almostBlack"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/workingsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toTopOf="@id/resultsTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/resultsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout style="@style/buttonRow"
        >

        <Button style="@style/buttonNumber"
            android:text="7"
            android:background="@drawable/round_button"
            android:onClick="numberAction">

        </Button>
        <Button style="@style/buttonNumber"
            android:text="8"
            android:background="@drawable/round_button"
            android:onClick="numberAction">

        </Button>
        <Button style="@style/buttonNumber"
            android:text="9"
            android:background="@drawable/round_button"
            android:onClick="numberAction">

        </Button>
        <Button style="@style/buttonOperator"
            android:text="x"
            android:textColor="@color/black"
            android:background="@drawable/round_button_operator"
            android:onClick="operatorAction">

        </Button>
    </LinearLayout>
    <LinearLayout style="@style/buttonRow">

        <Button style="@style/buttonNumber"
            android:text="4"
            android:background="@drawable/round_button"
            android:onClick="numberAction"/>


        <Button style="@style/buttonNumber"
            android:text="5"
            android:background="@drawable/round_button"
            android:onClick="numberAction"/>


        <Button style="@style/buttonNumber"
            android:text="6"
            android:background="@drawable/round_button"
            android:onClick="numberAction"/>

        <Button style="@style/buttonOperator"
            android:text="-"
            android:textColor="@color/black"
            android:background="@drawable/round_button_operator"
            android:onClick="operatorAction"/>


    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button style="@style/buttonNumber"
            android:text="1"
            android:background="@drawable/round_button"
            android:onClick="numberAction"/>


        <Button style="@style/buttonNumber"
            android:text="2"
            android:background="@drawable/round_button"
            android:onClick="numberAction"/>

        <Button style="@style/buttonNumber"
            android:text="3"
            android:background="@drawable/round_button"
            android:onClick="numberAction"
            >

        </Button>
        <Button style="@style/buttonOperator"
            android:text="+"
            android:textColor="@color/black"
            android:background="@drawable/round_button_operator"
            android:onClick="operatorAction"/>

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button style="@style/buttonNumber"
            android:text="0"
            android:background="@drawable/round_button"
            android:onClick="numberAction"/>

        <Button style="@style/buttonNumber"
            android:background="@drawable/round_button"
            android:text="."/>

        <Button style="@style/buttonNumber"
            android:text="âŒ«"
            android:textColor="@color/del"
            android:background="@drawable/round_button"
            android:onClick="backSpaceAction"/>

        <Button style="@style/buttonOperator"
            android:text="/"
            android:background="@drawable/round_button_operator"
            android:textColor="@color/black"
            android:onClick="operatorAction"/>

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="("
            android:background="@drawable/round_button"
            android:onClick="numberAction" />

        <Button
            style="@style/buttonNumber"
            android:text=")"
            android:background="@drawable/round_button"
            android:onClick="numberAction" />

        <Button style="@style/buttonNumber"
            android:text="CLR"
            android:background="@drawable/round_button"
            android:textColor="@color/del"
            android:onClick="allClearAction"/>


        <Button style="@style/buttonOperator"
            android:text="%"
            android:background="@drawable/round_button_operator"
            android:textColor="@color/black"
            android:onClick="operatorAction"/>

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:background="@color/palered"
            android:onClick="equalsAction"
            android:text="="
            android:textColor="@color/black"
            android:textSize="40sp"/>

    </LinearLayout>



</LinearLayout>
